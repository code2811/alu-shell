#!/bin/env bash
# This script checks for the 4-to_infinity_and_beyond process and terminates it if found.

# Check for the process and get its PID
pid=$(pgrep 4-to_infinity_and_beyond)

# If the PID is found, terminate the process
if [[ -n $pid ]]; then
    # Instead of kill or killall, we can use pkill which is more appropriate for this task
    pkill -P "$pid"
    echo "Terminated 4-to_infinity_and_beyond process with PID: $pid"
else
    echo "No 4-to_infinity_and_beyond process found."
fi

